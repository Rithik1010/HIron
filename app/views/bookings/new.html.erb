<% provide(:title, 'Booking') %>
<h1>Booking</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@booking, url: book_path) do |f| %>
    
      <%= f.hidden_field :user_id, value: current_user.id %>
      <%= f.hidden_field :partner_id, value: params[:partner_id] %>
    
      <%= f.label :address %>
      <%= f.text_area :address, placeholder: "Enter your address here..." %>
      <%= f.submit "Book Now", class: "btn btn-custom2" %>
    <% end %>
  </div>
</div>